<header style="background-image: url(https://images.pexels.com/photos/14702039/pexels-photo-14702039.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1); background-size: cover">
  <nav class="container">
    <ul>
      <li><h2><a href="/" style="color: white;">{{ site.name }}</a></h2></li>
    </ul>
    <ul>
      {% for nav in collections.primary reversed %}
        <li {% if page.url == nav.url %}aria-current="page"{% endif %}>
          <a href="{{ nav.url }}">{{ nav.data.title }}</a>
        </li>
      {% endfor %}
    </ul>
  </nav>
</header>